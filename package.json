{
    "name": "tuflow",
    "displayName": "tuflow",
    "description": "Syntax highlighting and command completion for TUFLOW",
    "version": "0.4.0",
    "publisher": "danielcopelin",
    "repository": {
        "type": "git",
        "url": "https://github.com/danielcopelin/tuflow-vscode"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "tuflow",
                "aliases": [
                    "TUFLOW",
                    "tuflow"
                ],
                "extensions": [
                    ".tcf",
                    ".tgc",
                    ".tbc",
                    ".tmf",
                    ".ecf",
                    ".tef",
                    ".trd",
                    ".tlf",
                    ".toc",
                    ".trfc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tuflow",
                "scopeName": "source.tuflow",
                "path": "./syntaxes/tuflow.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "tuflow",
                "path": "./snippets/tuflow.json"
            }
        ]
    }
}
